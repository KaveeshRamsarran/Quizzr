# Quizzr Environment Variables

# Database
DATABASE_URL=postgresql://quizzr:quizzr_dev_password@localhost:5432/quizzr

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
# Optional: point OpenAI client at a local OpenAI-compatible server.
# Example: Llama Stack (if it exposes OpenAI-compatible /v1 endpoints)
# OPENAI_BASE_URL=http://localhost:8321/v1
OPENAI_BASE_URL=

# LLM Provider (recommended local dev)
# Use Ollama to run local Llama-family models.
# - Install Ollama, then run: `ollama serve` and `ollama pull llama3.1`
# - Set provider to 'ollama' (default) or 'openai' / 'openai_compat' (OpenAI-compatible)
LLM_PROVIDER=ollama
LLM_MODEL=llama3.1
OLLAMA_BASE_URL=http://localhost:11434

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=pdf

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Generation Limits
MAX_CARDS_PER_DOCUMENT=500
MAX_QUIZ_QUESTIONS=50
MAX_CHUNKS_PER_GENERATION=20

# Environment
ENVIRONMENT=development
DEBUG=true

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# OCR Settings
OCR_ENABLED=true
OCR_TEXT_THRESHOLD=50

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
